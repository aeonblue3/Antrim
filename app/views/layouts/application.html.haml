!!! 5
%html
	%head
		%title Antrim
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
		<![endif]-->
		=stylesheet_link_tag    "application", :media => "all"
		=csrf_meta_tags
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
	%body
		.container
			.navbar.navbar-fixed-top
				.navbar-inner
					.container-fluid
						%a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".nav-collapse"}
							%span.icon-bar &nbsp;
							%span.icon-bar &nbsp;
							%span.icon-bar &nbsp;
						=link_to "Antrim Glen", root_url, :class => "brand"
						.nav-collapse
							%ul.nav
								%li
									=link_to "Home", home_path
								%li
									=link_to "Blog", posts_path
								%li
									=link_to "Ballots", ballots_path
								%li
									=link_to "Results", result_path
								-if current_user
									%li.dropdown
										%a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
											="Logged in as #{current_user.key}"
											%b.caret
										%ul.dropdown-menu
											%li
												=link_to "Log Out", logout_path
								-else
									%li
										=link_to "Login", login_path
			#main-header
				%h1#logo Antrim Glen
			.row
				.span8.offset2
					-flash.each do |name, msg|
						-name == :alert ? type = "error" : type = "success"
						%div.alert{:class => "alert-#{type}"}
							%a.close{"data-dismiss" => "alert"} &times;
							=msg
					=yield
	=javascript_include_tag "application"