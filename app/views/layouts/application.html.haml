!!! 5
%html
	%head
		%title Antrim
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
		<![endif]-->
		=stylesheet_link_tag    "application", :media => "all"
		=javascript_include_tag "application"
		=csrf_meta_tags
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
	%body
		#main_container
			%header{:id => "main-header"}
				%h1{:id => "logo"} Antrim Glen
			%div{:class => "navbar navbar-fixed-top"}
				.navbar-inner
					.container
						%a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".collapse"}
							%span.icon-bar &nbsp;
							%span.icon-bar &nbsp;
							%span.icon-bar &nbsp;
						%a.brand{:href => "/"} Antrim Glen
						.nav-collapse
							%ul.nav
								%li
									=link_to "Home", home_index_path
								%li
									=link_to "Blog", posts_path
								%li
									=link_to "Ballots", ballots_path
								%li
									-if current_user
										=link_to "Log Out", logout_path
									-else
										=link_to "Login", login_path
				.row
					.span8.offset4
						=yield
			-flash.each do |name, msg|
				%div{:id => "flash_#{name}", :class => "message"}
					=msg